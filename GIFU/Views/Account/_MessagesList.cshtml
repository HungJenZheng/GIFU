@model IEnumerable<GIFU.Models.Notification>
@foreach (var item in Model)
{
    <li class="notreadnotice">
        <img @("src=" + item.ImageUrl) class="">
        <pre>@Html.Raw(@item.Content)</pre>
        <a href="@item.Url">前往<span class="glyphicon glyphicon-chevron-right"></span></a>
    </li>
}
