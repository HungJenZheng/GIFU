@model GIFU.Models.LoginVM

@{
    ViewBag.Title = "Login";
}
<p>@TempData["Error"]</p>
<h2>Login</h2>

<form id="loginForm" action="/Account/Login" method="post">
    <div class="form-horizontal">
        <div class="form-group">
            <label class="control-label col-md-2" for="email">帳號</label>
            <div class="col-md-10">
                <input type="email" id="email" class="k-textbox textbox" name="email" placeholder="帳號" value="@Model.Email"/>
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-md-2" for="passwd">密碼</label>
            <div class="col-md-10">
                <input type="password" id="passwd" class="k-textbox textbox" name="passwd" placeholder="密碼" value="@Model.Passwd"/>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-2">
            </div>
            <div class="col-md-10">
                <button type="submit" id="login">登入</button>
            </div>
        </div>
    </div>
</form>
